<div class="page-header"><h2>New notification for <%= Time.now.strftime("%A, %B %e, %Y") %></h2></div>
<br>
<h3>Check each cohabitant that has mail in their bin.</h3>
<br>
<%= form_for(@notification, :html => { :class => 'well span4' }) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id%>
  <% @cohabitants.each do |c| %>
    <label for="<%= c.department %>">
      <%= check_box_tag 'notification[cohabitant_ids][]', c.id, false, :id => c.department %>
      <%= c.department %>
    </label>
  <% end %>
  <br>
  <%= f.submit 'Notify!', :class => 'btn btn-success btn-large' %>
<% end %>

