<!DOCTYPE html>
<html>
<head>
  <title>Snell Mail</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="span6 offset3">
        <%= render 'layouts/header' %>
      </div>
    </div>
    <div class="row">
      <div class="span6 offset3">
        <%= yield %>
      </div>
    </div>
    <div class="row">
      <div class="span3 offset4">
        <div class="alert">
        <% if @notification.errors.any? %>
          <% @notification.errors.full_messages.each do |m| %>
            <button class="close" data-dismiss="alert">Ã—</button>
            <p><strong>Warning!</strong> <%= m.downcase %></p>
          <% end %>
        <% end %>
        <% flash.each do |key, value| %>
          <p><%= key %>: <%= value %></p>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</body>
</html>
