<%= render 'header' %>
<h1>New user</h1>
<br>
<%= form_for @user, html: { class: 'form-horizontal span3' } do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <br><br>
  <%= f.text_field :email, placeholder: "Email" %>
  <br><br>
  <%= f.password_field :password, placeholder: "Password" %>
  <br><br>
  <%= f.password_field :password_confirmation, placeholder: "Password confirmation" %>
  <br>
  <label for="user_admin">
    Admin
    <%= f.check_box :admin %>
  </label>
  <br>
  <%= f.submit 'Create', class: 'btn btn-success' %>
<% end %>

<% if @user.errors.any? %>
  <div class="span3">
    <div class="alert">
      <a class="close" data-dismiss="alert" href="#">cool</a>
      <p class="lead">Your user wasn't created for the following <%= @user.errors.one? ? "reason" : "reasons" %>:</p>
      <% @user.errors.full_messages.each do |m| %>
        <p><%= m.downcase %></p>
      <% end %>
    </div>
  </div>
<% end %>
