<!DOCTYPE html>
<html>
<head>
  <title>Snell Mail</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="span6 offset3">
        <%= render 'layouts/header' %>
      </div>
    </div>
    <% if flash.any? %>
    <div class="row">
      <div class="span6 offset3">
        <% flash.each do |key, value| %>
          <div class="alert <%= key %>">
          <a class="close" data-dismiss="alert" href="#">cool</a>
          <p><%= value %></p>
        <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="row">
      <div class="span6 offset3">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
