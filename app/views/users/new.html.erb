<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :admin %>
  <%= f.check_box :admin %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :create %>
  <%= f.submit 'Create' %> 
<% end %>
