<%= render 'shared/sub_header', klass: 'cohabitant', error: @error %>
<h2>Edit <%= @cohabitant.department %></h2>
<br>
<%= form_for @cohabitant, html: { class: 'form-horizontal span3' } do |f| %>
  <%= f.text_field :location, placeholder: 'Location' %>
  <br><br>
  <%= f.text_field :contact_name, placeholder: 'Contact name' %>
  <br><br>
  <%= f.text_field :contact_email, placeholder: 'Contact email' %>
  <br><br>
  <%= f.submit 'Edit', class: 'btn btn-warning' %>
<% end %>

<%= render 'shared/errors', object: @cohabitant %>
